{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "keyword-spacing": "error",
    "arrow-spacing": "error",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}
